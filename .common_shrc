export LANG=ja_JP.UTF-8
export EDITOR=vim

# history
# = 履歴を保存するファイル =
HISTFILE=$HOME/.zsh-history
# = メモリ上に保存する履歴のサイズ =
HISTSIZE=100000
# = 上述のファイルに保存する履歴のサイズ =
SAVEHIST=1000000
# = 実行時に履歴をファイルにに追加していく =
setopt inc_append_history
# = 履歴を他のシェルとリアルタイム共有する =
setopt share_history

# alias
# = ls =
alias la='ls -la'
alias ll='ls -l'

# = else =
alias mv='mv -i'
alias rm='rm -i'
alias cp='cp -i'
alias mkdir='mkdir -p'
alias python='python3'
alias cddot='cd $HOME/dotfiles'
